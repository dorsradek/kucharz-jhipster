<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <property name="now" value="now()" dbms="mysql,h2"/>
    <property name="now" value="current_timestamp" dbms="postgresql"/>
    <property name="now" value="sysdate" dbms="oracle"/>

    <property name="autoIncrement" value="true" dbms="mysql,h2,postgresql"/>
    <property name="autoIncrement" value="false" dbms="oracle"/>

    <property name="floatType" value="float4" dbms="postgresql, h2"/>
    <property name="floatType" value="float" dbms="mysql, oracle"/>

    <!--
        Added the entity PrzepisProdukt.
    -->
    <changeSet id="20151010142612" author="jhipster">
        <createTable tableName="przepis_produkt">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="quantity" type="double"/>
            <column name="produkt_id" type="bigint"/>
            <column name="przepis_id" type="bigint"/>
        </createTable>

        <addForeignKeyConstraint baseColumnNames="produkt_id"
                                 baseTableName="przepis_produkt"
                                 constraintName="fk_przepisprodukt_produkt_id"
                                 referencedColumnNames="id"
                                 referencedTableName="produkt"/>

        <addForeignKeyConstraint baseColumnNames="przepis_id"
                                 baseTableName="przepis_produkt"
                                 constraintName="fk_przepisprodukt_przepis_id"
                                 referencedColumnNames="id"
                                 referencedTableName="przepis"/>

        <loadData encoding="UTF-8"
                  file="config/liquibase/przepis_produkt.csv"
                  separator=";"
                  tableName="przepis_produkt"/>

    </changeSet>
</databaseChangeLog>
